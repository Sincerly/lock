<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/t"
        layout="@layout/include_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="卡券类型"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tvPacketType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/icon_right_arrow"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center_vertical|right"
                    android:text="团购套餐"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp"
                        android:layout_marginLeft="15dp"
                        android:text="团购套餐"
                        android:textColor="@color/color_282828"
                        android:textSize="@dimen/sp_14" />



                    <EditText
                        android:id="@+id/etYh"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="优惠金额"
                        android:singleLine="true"
                        android:textColor="@color/color_282828"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="@dimen/sp_14" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="￥"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/color_282828"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp"
                        android:layout_marginLeft="15dp"
                        android:text="套餐原价"
                        android:textColor="@color/color_282828"
                        android:textSize="@dimen/sp_14" />



                    <EditText
                        android:id="@+id/etYj"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="套餐金额"
                        android:singleLine="true"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color_282828"
                        android:textColorHint="@color/color_cccccc"
                        android:textSize="@dimen/sp_14" />
                    <TextView
                        android:layout_marginRight="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="￥"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/color_282828"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/dp_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="主图"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_14" />


                <com.ysxsoft.common_base.view.custom.image.RoundImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dp_10"
                    app:radius="@dimen/dp_10"
                    android:src="@mipmap/icon_group" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_right_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv3Name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="套餐名"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_14" />


                <EditText
                    android:id="@+id/etName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入名称"
                    android:singleLine="true"
                    android:textColor="@color/color_282828"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv4Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingVertical="@dimen/dp_10"
                android:text="套餐详情"
                android:textColor="@color/color_282828"
                android:textSize="@dimen/sp_14" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etInputRules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:gravity="start"
                    android:hint="请写下详情…"
                    android:maxLength="500"
                    android:minHeight="150dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="@dimen/dp_10"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:src="@mipmap/icon_group_add"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvOk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginHorizontal="35dp"
                android:layout_marginVertical="50dp"
                android:background="@drawable/shape_btn_bg"
                android:gravity="center"
                android:text="确认添加"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>