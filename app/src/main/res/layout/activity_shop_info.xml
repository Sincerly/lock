<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/t"
        layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LL1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="店铺LOGO"
                android:textColor="@color/color_282828"
                android:textSize="@dimen/sp_14" />

            <com.ysxsoft.common_base.view.custom.image.CircleImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="15dp"
                android:src="@mipmap/icon_right_arrow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="店铺名称"
                android:textColor="@color/color_282828"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tvShopName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/icon_right_arrow"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical|right"
                android:text="肯德基"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/colorWhite"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="主营类目"
                android:textColor="@color/color_282828"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tvSaleType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/icon_right_arrow"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical|right"
                android:text="快餐"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="营业时间"
                android:textColor="@color/color_282828"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tvWorkTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/icon_right_arrow"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical|right"
                android:text="周一-周日11：00-22：00"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="店铺地址"
                android:textColor="@color/color_282828"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tvShopAddress"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/icon_right_arrow"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical|right"
                android:text="北京市朝阳区王府井"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="联系电话"
                android:textColor="@color/color_282828"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical|right"
                android:hint="请输入电话"
                android:inputType="none"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/color_282828"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tvOk"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:textColor="@color/colorWhite"
        android:text="确认"
        android:background="@drawable/shape_btn_bg"
        android:gravity="center"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="50dp"
        android:textSize="17sp"/>


</LinearLayout>