<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ysxsoft.common_base.view.custom.image.RoundImageView
            android:id="@+id/riv"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="@dimen/dp_10"
            android:src="@mipmap/ic_launcher"
            app:radius="@dimen/dp_8"
            android:scaleType="fitXY"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="肯德基天桥店"
            android:layout_marginLeft="@dimen/dp_8"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toRightOf="@id/riv"
            app:layout_constraintTop_toTopOf="@id/riv" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="￥"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/sp_12"
            app:layout_constraintLeft_toLeftOf="@id/tvShopName"
            app:layout_constraintTop_toBottomOf="@id/tvShopName" />

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="89.00"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/sp_16"
            app:layout_constraintBottom_toBottomOf="@id/tv1"
            app:layout_constraintLeft_toRightOf="@id/tv1"
            app:layout_constraintTop_toTopOf="@id/tv1" />

        <TextView
            android:id="@+id/tvGrayMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="¥1369"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_10"
            app:layout_constraintBottom_toBottomOf="@id/tvMoney"
            app:layout_constraintLeft_toRightOf="@id/tvMoney"
            app:layout_constraintTop_toTopOf="@id/tvMoney" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/tvShopName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMoney">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总投放"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_10"
                        app:layout_constraintLeft_toLeftOf="@id/tvShopName"
                        app:layout_constraintTop_toBottomOf="@id/tvShopName" />

                    <TextView
                        android:id="@+id/tvSum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/color_282828"
                        android:textSize="@dimen/sp_10"
                        app:layout_constraintLeft_toRightOf="@id/tv3"
                        app:layout_constraintTop_toTopOf="@id/tv3" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="核销次数"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_10"
                    app:layout_constraintLeft_toLeftOf="@id/tvShopName"
                    app:layout_constraintTop_toBottomOf="@id/tvShopName" />

                <TextView
                    android:id="@+id/tvNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_10"
                    app:layout_constraintLeft_toRightOf="@id/tv3"
                    app:layout_constraintTop_toTopOf="@id/tv3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加日期"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_10"
                        app:layout_constraintLeft_toLeftOf="@id/tvShopName"
                        app:layout_constraintTop_toBottomOf="@id/tvShopName" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/color_282828"
                        android:textSize="@dimen/sp_10"
                        app:layout_constraintLeft_toRightOf="@id/tv3"
                        app:layout_constraintTop_toTopOf="@id/tv3" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginHorizontal="15dp"
        android:background="@color/color_f2f2f2" />
    <include layout="@layout/layout_shop_menu" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/color_f2f2f2" />
</LinearLayout>