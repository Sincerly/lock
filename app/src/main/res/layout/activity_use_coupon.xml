<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/t"
        layout="@layout/include_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_45"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <com.ysxsoft.common_base.view.custom.image.RoundImageView
                        android:id="@+id/riv"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/ic_launcher"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:radius="@dimen/dp_10" />

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="超级会员专享券"
                        android:textColor="@color/color_282828"
                        android:textSize="@dimen/sp_18"
                        app:layout_constraintLeft_toRightOf="@id/riv"
                        app:layout_constraintTop_toTopOf="@id/riv" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="2019.10.17-2019.11.30"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_10"
                        app:layout_constraintBottom_toBottomOf="@id/riv"
                        app:layout_constraintLeft_toLeftOf="@id/tv1"
                        app:layout_constraintTop_toTopOf="@id/riv" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="总价：￥146"
                        android:textColor="@color/color_999999"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="@id/riv"
                        app:layout_constraintLeft_toLeftOf="@id/tv1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_right_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginHorizontal="15dp"
                    android:background="@color/color_ebebeb" />


                <ImageView
                    android:id="@+id/ivBarCode"
                    android:layout_width="160dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp"
                    android:background="@mipmap/icon_bar_code" />

                <ImageView
                    android:id="@+id/ivQrCode"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@mipmap/icon_qrcode" />

                <TextView
                    android:id="@+id/tvCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:gravity="center_horizontal"
                    android:text="2626  262626 262626"
                    android:textColor="@color/color_282828"
                    android:textSize="@dimen/sp_15" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <com.ysxsoft.common_base.view.custom.image.CircleImageView
                        android:id="@+id/iv"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="45dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:src="@mipmap/ic_launcher"/>

                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="沙拉原滋味来尝沙拉原生态态沙拉原原…"
                        android:textColor="@color/color_282828"
                        android:textSize="17sp"
                        android:layout_marginLeft="@dimen/dp_10"
                        app:layout_constraintLeft_toRightOf="@id/iv"
                        app:layout_constraintTop_toTopOf="@id/iv" />

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="距5你116m，步行约2分钟"
                        android:textColor="@color/color_999999"
                        android:textSize="9sp"
                        app:layout_constraintLeft_toLeftOf="@id/tv4"
                        app:layout_constraintTop_toBottomOf="@id/tv4" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_right_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:elevation="0dp"
                    android:minHeight="150dp"
                    app:cardCornerRadius="@dimen/dp_10">

                   <com.baidu.mapapi.map.MapView
                       android:id="@+id/mapView"
                       android:layout_width="match_parent"
                       android:layout_height="150dp"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="@dimen/dp_20"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商家电话："
                        android:textColor="@color/color_282828"
                        android:textSize="@dimen/sp_14" />
                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0816-86868686"
                        android:textColor="@color/color_282828"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv8"
                        android:layout_width="70dp"
                        android:layout_height="@dimen/dp_24"
                        android:gravity="center"
                        android:text="联系商家"
                        android:background="@drawable/bg_shape_theme_border_color_r24"
                        android:textColor="@color/color_3BB0D2"
                        android:textSize="@dimen/sp_14" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>