<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_info_bg"
        android:minHeight="200dp">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/bg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/statusBar2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="?android:attr/actionBarSize">

                    <TextView
                        android:id="@+id/backWithText"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:drawableLeft="@mipmap/icon_gray_back"
                        android:text="返回上一步"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_686868"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:id="@+id/backLayout"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="?android:attr/actionBarSize"
                        android:layout_height="?android:attr/actionBarSize"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_white_back" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/title"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text=""
                        android:layout_centerInParent="true"
                        android:textColor="@color/color_282828"
                        android:textSize="@dimen/sp_18" />

                    <!--中间两个Tab-->
                    <LinearLayout
                        android:id="@+id/customCenterTabView"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/rightWithIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="?android:attr/actionBarSize"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16"
                        android:layout_centerVertical="true"
                        android:drawablePadding="@dimen/dp_10"
                        android:text=""
                        android:textColor="@color/color_686868"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:id="@+id/bottomLineView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1" android:background="@color/color_spacing"/>
        </LinearLayout>


        <com.ysxsoft.common_base.view.custom.image.CircleImageView
            android:id="@+id/civ"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="碧昂丝·诺斯"
            android:textColor="@color/colorWhite"
            android:textSize="19sp"
            app:layout_constraintLeft_toRightOf="@id/civ"
            app:layout_constraintTop_toTopOf="@id/civ" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="无论何人，不要求自己的益处，乃要求别人的益处。"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_12"
            app:layout_constraintBottom_toBottomOf="@id/civ"
            app:layout_constraintLeft_toLeftOf="@id/tv1" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@mipmap/icon_setting"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/civ" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/civ">

            <LinearLayout
                android:id="@+id/LL1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvL1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="400"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="现金券"
                    android:textColor="@color/colorWhite"
                    android:textSize="9sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvL2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="团购套餐"
                    android:textColor="@color/colorWhite"
                    android:textSize="9sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvL3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免费体验"
                    android:textColor="@color/colorWhite"
                    android:textSize="9sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvL4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员卡"
                    android:textColor="@color/colorWhite"
                    android:textSize="9sp" />


            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:minHeight="55dp">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dp_10"
            android:text="社区商圈"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="随时随地了解附近优惠"
            android:textColor="@color/color_999999"
            android:textSize="9sp"
            app:layout_constraintLeft_toLeftOf="@id/tv3"
            app:layout_constraintTop_toBottomOf="@id/tv3" />


        <com.ysxsoft.common_base.view.custom.piehead.PieLayout
            android:id="@+id/pie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv2"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:src="@mipmap/icon_right_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:drawableLeft="@mipmap/icon_lock"
            android:drawableRight="@mipmap/icon_right_arrow"
            android:gravity="center_vertical"
            android:text="钥匙管理"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:drawableLeft="@mipmap/icon_smrz"
            android:drawableRight="@mipmap/icon_right_arrow"
            android:gravity="center_vertical"
            android:text="实名认证"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:drawableLeft="@mipmap/icon_wyrz"
            android:drawableRight="@mipmap/icon_right_arrow"
            android:gravity="center_vertical"
            android:text="物业认证"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:drawableLeft="@mipmap/icon_shzx"
            android:drawableRight="@mipmap/icon_right_arrow"
            android:gravity="center_vertical"
            android:text="商户中心"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:drawableLeft="@mipmap/icon_ggzx"
            android:drawableRight="@mipmap/icon_right_arrow"
            android:gravity="center_vertical"
            android:text="广告中心"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:drawableLeft="@mipmap/icon_feedback"
            android:drawableRight="@mipmap/icon_right_arrow"
            android:gravity="center_vertical"
            android:text="意见反馈"
            android:textColor="@color/color_282828"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>


</LinearLayout>